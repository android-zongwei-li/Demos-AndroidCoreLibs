<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lizw.ui_demos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemosAndroidCoreLibs">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- package start : customview -->
        <activity
            android:name=".customview.CustomViewActivity"
            android:exported="false" />
        <!-- package end : customview -->

        <!-- package start : recycler view -->
        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:exported="false" />

        <activity
            android:name=".recyclerview.MultiTypeActivity"
            android:exported="false" />
        <!-- package end : recycler view -->

    </application>

</manifest>